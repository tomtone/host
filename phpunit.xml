<phpunit backupGlobals="true"
         bootstrap="./vendor/autoload.php"
         strict="true"
         verbose="true">
    <testsuite name="PHPUnit Skeleton Generator">
        <directory suffix="Test.php">./tests</directory>
        <exclude>./tests/_fixture</exclude>
        <exclude>./src/Command/InitCommand.php</exclude>
    </testsuite>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./docs/report" lowUpperBound="35"
             highLowerBound="70"/>
        <log type="junit" target="./docs/logfile.xml" logIncompleteSkipped="false"/>
        <log type="testdox-html" target="./docs/testdox.html"/>
        <log type="coverage-clover" target="./docs/coverage.xml"/>
    </logging>
</phpunit>