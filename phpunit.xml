<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="true"
         bootstrap="./vendor/autoload.php"
         strict="true"
         verbose="true">
    <testsuite name="PHPUnit Skeleton Generator">
        <directory suffix="Test.php">./tests</directory>
        <exclude>./tests/_fixture</exclude>
    </testsuite>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./docs/report" lowUpperBound="35"
             highLowerBound="70"/>
        <log type="junit" target="./docs/logfile.xml" logIncompleteSkipped="false"/>
        <log type="testdox-html" target="./docs/testdox.html"/>
    </logging>
</phpunit>